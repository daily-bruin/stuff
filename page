                top: windowH + 'px',
            });
            function hidePlaylist() {
                        currentPlaylist.css('visibility','hidden');
            }
           
           $('#article1').on('click', function(e) {
                    // currentPlaylist= $('#article1playlist');
                    //playlist.load("Assets/Multimedia/article1playlist.html");
                    currentPlaylist.css('visibility','hidden');
                    currentPlaylist= $('#article1playlist');
                    currentPlaylist.css('visibility','visible');

                    currentInfobox.css('visibility', 'hidden');
                    currentInfobox = $('#infobox1');
                    currentInfobox.css('visibility','visible');
                    Headline.html(article1Headline);
                    albumCover.load("Assets/Art/article1image.html");
                    articleContent.load("Assets/articleText/article1.html");
                    landingPage.animate({'top': -windowH + 'px'}, {duration: animSpeed, queue: false});
                    article.animate({'top': 0},{duration: animSpeed, queue: false} );
                    $(".infobox").animate({left: 0}, 500);
                    $(".playlistWrapper").animate({right: '20px'}, 500);
                    
                    
           });
           $('#article2').on('click', function(e) {
