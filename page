        $('.foldBar').on('click', function(e) {
                if ( foldBarHidden == false ) {
                    $('.playlistWrapper').animate({width: '20px'},{duration:500});
                    $('.playlistEmbed2').animate({width: '0px'},{duration: 500});
                    
                    foldBarHidden= true;
                }
                else{
                    $('.playlistWrapper').animate({width: '240px'},{queue: true, duration:500});
                     $('.playlistEmbed2').animate({height: '300px'},{queue: true, duration: 500});
                    $('.playlistEmbed2').animate({width: '220px'},{queue: true, duration: 500});
                      
                    foldBarHidden= false;

                }
                e.preventDefault();
            });


        btns.on('click', function(e) {
                if ( $(this).hasClass('open') ) {
                    article.animate({'top': windowH + 'px'}, {duration: animSpeed, queue: false});
                    landingPage.animate({'top': 0}, {duration: animSpeed, queue: false});
                    $(".infobox").animate({left: '-200px'},{duration: 500});
                    $(".playlistWrapper").animate({right: '-240px'},{duration: 500});
                    if (foldBarHidden == true) {
                    $('.playlistWrapper').animate({width: '240px'},{queue: true, duration:500});
                     $('.playlistEmbed2').animate({height: '300px'},{queue: true, duration: 500});
                    $('.playlistEmbed2').animate({width: '220px'},{queue: true, duration: 500});

                    foldBarHidden= false;

                }
                }
                e.preventDefault();
            });
        
